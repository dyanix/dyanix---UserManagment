<% include('../layouts/header.ejs') %>

    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td,
        #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #1a04aa;
            color: white;
        }


        .link {
            color: #fff !important;
            padding: 10px 20px;
            background: #39ac31;
            margin: 20px 0;
            display: inline-block;
        }

        .link1 {
            color: #fff !important;
            padding: 10px 20px;
            background: #317fac;
            margin: 20px 0;
            display: inline-block;
        }

        .link2 {
            color: #fff !important;
            padding: 10px 20px;
            background: #c91c1c;
            margin: 20px 0;
            display: inline-block;
        }

        .center-reveal:before {
            content: "";
            position: absolute;
            width: 100%;
            height: 5%;
            bottom: 0;
            left: 0;
            background-color: #000;
            transform: scaleX(0);
            transition: all 0.3s ease-in-out 0s;
        }

        .center-reveal:hover:before {
            transform: scalex(1);
        }
    </style>
    <h1 style="text-align: center; font-size: 2rem;font-size: 50px;
    text-decoration: inherit;position: relative;" class="center-reveal">Dashbaord</h1>
    <a class="link" href="/admin/new-user">Add New User</a>
    <a class="link" href="/admin/export-user-pdf">Export into pdf</a>
    <table id="customers">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Image</th>
            <th>Verified</th>
            <th>Actions</th>
        </tr>
        <% if(users.length>0){
            for(let i=0;i<users.length;i++){ %>
                </users.length>
                <tr>
                    <td>
                        <%= users[i].name %>
                    </td>
                    <td>
                        <%= users[i].email %>
                    </td>
                    <td>
                        <%= users[i].mobile %>
                    </td>
                    <td><img src="/userimages/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px"
                            height="100px"></td>
                    <td>
                        <% if(users[i].is_verified==0){ %>
                            <p>Not Verified</p>
                            <% } else{ %>
                                <p>Verified</p>
                                <% } %>
                    </td>
                    <td><a href="/admin/edit-user?id=<%= users[i]._id%>" class="link1">Edit</a>
                        <a href="/admin/delete-user?id=<%= users[i]._id%>" class="link2">Delete</a>
                    </td>
                </tr>

                <% } } else{ %>
                    <tr>
                        <td colspan="5">User Not Found</td>
                    </tr>
                    <% } %>
    </table>
    <br>
    <a href="/admin/home" class="link">Go to Home</a>


    <% include('../layouts/footer.ejs') %>